# Database (Neon PostgreSQL)
DATABASE_URL=""

# Anthropic API
ANTHROPIC_API_KEY=""

# NextAuth
NEXTAUTH_SECRET=""
NEXTAUTH_URL=""
AUTH_SECRET=""

# Google OAuth - DESHABILITADO (solo usuarios corporativos con Microsoft)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# Microsoft OAuth (NextAuth v5 auto-detects these variables)
AUTH_MICROSOFT_ENTRA_ID_ID=""
AUTH_MICROSOFT_ENTRA_ID_SECRET=""
AUTH_MICROSOFT_ENTRA_ID_ISSUER=""

# App Config
NODE_ENV="development"

# MCP Server (Azure)
MCP_SERVER_URL="http://instructoria-mcp.eastus.azurecontainer.io:8080"

# Testing & Development
# Mock streaming endpoint (no consume tokens de Claude)
NEXT_PUBLIC_STREAM_MOCK_TEST="false"
# Delay entre chunks del mock (en ms) - default: 60
MOCK_CHUNK_DELAY="60"

# Debug & Logging
# Mostrar queries de Prisma en consola (true/false o 1/0)
# Por defecto: false (solo muestra errores)
PRISMA_DEBUG="false"

# Activar logs de debug de la aplicación (true/false o 1/0)
# Controla todos los debugLog(), debugInfo(), etc. en el código
# Por defecto: false (solo errores)
# Activar para ver flujo completo de verificación, progreso, etc.
NEXT_PUBLIC_DEBUG_LOGS="false"

# Sistema de Transcript de Conversaciones (solo development)
# Genera archivos /tmp/LESSON_{sessionId}.md con log de conversaciones
# Útil para debugging del flujo conversacional y análisis de interacciones
# Por defecto: 0 (desactivado)
# IMPORTANTE: Solo funciona en NODE_ENV !== production
WRITE_LESSON_TXT="0"

# Security & User Experience
# Permitir paste en el chat input (true/false o 1/0)
# Por defecto: false (bloqueado para fomentar respuestas genuinas)
# Activar para testing o desarrollo
NEXT_PUBLIC_ALLOW_PASTE_INPUT="false"
